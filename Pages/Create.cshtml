@page
@model gruppArbete.Pages.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Add book";
}
<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>

        <!-- Style and create new divs that fit & require right dataType for each property.-->
        <form method="post">
            <div>
                <label class="col-form-label mt-4" asp-for="Books[0].Title">Title:</label>
                <input type="text" class="form-control" asp-for="Books[0].Title" placeholder="Title..">
                <span asp-validation-for="Books[0].Title" class="text-danger"></span>
            </div>
            <div>
                <label class="col-form-label mt-4" asp-for="Books[0].Author">Author:</label>
                <input type="text" class="form-control" asp-for="Books[0].Author" placeholder="Author..">
                <span asp-validation-for="Books[0].Author" class="text-danger"></span>
            </div>
            <div>
                <label class="col-form-label mt-4" asp-for="Books[0].ISBN">ISBN:</label>
                <input type="number" class="form-control" asp-for="Books[0].ISBN" placeholder="ISBN..">
                <span asp-validation-for="Books[0].ISBN" class="text-danger"></span>
            </div>
            <div>
                <label class="col-form-label mt-4" asp-for="Books[0].Price">Price:</label>
                <input type="number" class="form-control" asp-for="Books[0].Price" placeholder="Price..">
            </div>

            <div class="form-group">
                <label asp-for="Books[0].Genre" class="form-label mt-4">Genre:</label>
                <select class="form-select" asp-for="Books[0].Genre">
                    <option>Thriller</option>
                    <option>Sci-Fi</option>
                    <option>Geografi</option>
                    <option>Personlig utveckling</option>
                    <option>Fantasy</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Books[0].Language" class="form-label mt-4">Language:</label>
                <select class="form-select" asp-for="Books[0].Language">
                    <option>Svenska</option>
                    <option>Engelska</option>
                    <option>Spanska</option>
                    <option>Franska</option>
                    <option>Hindi</option>
                    <option>Italienska</option>
                    <option>Mandarin</option>
                </select>
            </div>
            <div>
                <label class="col-form-label mt-4" asp-for="Books[0].ReleaseDate">Release Date:</label>
                <input type="date" class="form-control" asp-for="Books[0].ReleaseDate" placeholder="Release Date..">
            </div>

            <div>
                <label class="col-form-label mt-4" asp-for="Books[0].Publisher">Publisher:</label>
                <input type="text" class="form-control" asp-for="Books[0].Publisher" placeholder="Publisher..">
            </div>

            <fieldset class="form-group">
                <legend class="mt-4">Switches</legend>
                <div class="form-check form-switch">
                    <input class="form-check-input" asp-for="Books[0].NobelPriceWinner" type="checkbox" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Is the author a nobel price winner? </label>
                </div>
                <div class="form-check form-switch">
                    <input class="form-check-input" asp-for="Books[0].Read" type="checkbox" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Have I read the book?</label>
                </div>
                <div class="form-check form-switch">
                    <input class="form-check-input" asp-for="Books[0].Ownership" type="checkbox" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Do I own the book?</label>
                </div>
            </fieldset>
            <div>
                <label class="col-form-label mt-4" asp-for="Books[0].Image">Image URL:</label>
                <input type="url" class="form-control" asp-for="Books[0].Image" placeholder="Image URL..">
                <span asp-validation-for="Books[0].Image" class="text-danger"></span>
            </div><br />

            <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
            <a asp-page="/Index" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>

        </form>
        <br /><br /><br /><br /><br /><br />

