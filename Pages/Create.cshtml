@page
@model gruppArbete.Pages.CreateModel
@{
    ViewData["Title"] = "Add book";
}
<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="border p-3 mt-4" style="width:80%;">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>

        <!-- Style and create new divs that fit & require right dataType for each property.-->
        <form method="post">
            <label class="col-form-label mt-4" asp-for="Books.Title">Title:</label><br>
            <input type="text" class="form-control" asp-for="Books.Title" placeholder="Title.."><br>
            <label class="col-form-label mt-4" asp-for="Books.Author">Author:</label><br>
            <input type="text" class="form-control" asp-for="Books.Author" placeholder="Author.."><br>
            <label class="col-form-label mt-4" asp-for="Books.Price">Price:</label><br>
            <input type="number" class="form-control" asp-for="Books.Price" placeholder="Price.."><br>
            <label class="col-form-label mt-4" asp-for="Books.ISBN">ISBN:</label><br>
            <input type="number" class="form-control" asp-for="Books.ISBN" placeholder="ISBN.."><br>
            <div class="form-group">
                <label asp-for="Books.Genre" class="form-label mt-4">Genre:</label>
                <select class="form-select">
                    <option>Thriller</option>
                    <option>Sci-Fi</option>
                    <option>Geografi</option>
                    <option>Personlig utveckling</option>
                    <option>Fantasy</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Books.Language" class="form-label mt-4">Language:</label>
                <select class="form-select">
                    <option>Svenska</option>
                    <option>Engelska</option>
                    <option>Spanska</option>
                    <option>Franska</option>
                    <option>Hindi</option>
                    <option>Italienska</option>
                    <option>Mandarin</option>
                </select>
            </div>

            <label class="col-form-label mt-4" asp-for="Books.ReleaseDate">Release Date:</label><br>
            <input type="date" class="form-control" asp-for="Books.ReleaseDate" placeholder="Release Date.."><br>
            <label class="col-form-label mt-4" asp-for="Books.Publisher">Publisher:</label><br>
            <input type="text" class="form-control" asp-for="Books.Publisher" placeholder="Publisher.."><br>


            <fieldset class="form-group">
                <legend class="mt-4">Switches</legend>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Is the author a nobel price winner? </label>
                </div>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Have I read the book?</label>
                </div>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked="">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Do I own the book?</label>
                </div>
            </fieldset>
            <label class="col-form-label mt-4" asp-for="Books.Image">Image URL:</label><br>
            <input type="url" class="form-control" asp-for="Books.Image" placeholder="Image URL.."><br>

            <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
            <a asp-page="/Index" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>
            @*<input type="checkbox" asp-for="NewPizza.IsGlutenFree" class="mr-5">*@

        </form>
