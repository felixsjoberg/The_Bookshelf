                        <div class="card mb-4">
                            <img style="max-height: 20%;" src="@book.Image" alt="@book.Title book cover">

                            <div class="card-body">
                                <h5 class="card-title">@book.Title</h5>
                                <h6 class="card-subtitle text-muted">By @book.Author</h6>
                            </div>
                            <div style="text-align:center;">
                                <button type="button" class="btn btn-outline-warning">Book Review</button>
                            </div>

                        </div>
                    </div>
                }
            </div>
        </div>
    </tbody>

